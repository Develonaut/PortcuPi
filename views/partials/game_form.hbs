<section  class="mod {{#if mod_name}}{{mod_name}}{{/if}}" 
          data-role="mod"  
          {{#if data_conf}}data-conf="{{data_conf}}"{{/if}}>
  <div class="search-box">
    <div class="form-title">
      <h2>Finally, <em>get</em> the Metadata you need,</h2>
      <h4>to build a proper Raspberry Pi game collection.</h4>
    </div>
    <form data-role="game_search_form" method="POST" action="/results">
      <div class="form-wrapper">
        <div class="game-name-wrapper flex icn-before">
          <label class="form-label game-name hidden" for="game_name">Game Name</label>
          <input id="game_name" name="game_name" class="game-name-input flex-item-grow" type="text" maxlength="60" data-required="true" placeholder="Game Name"/>
        </div>
        <div class="game-platform-wrapper flex icn-before hidden">
          <label class="form-label game-name hidden" for="game_platform">Game Name</label>
          <input id="game_platform" name="game_platform" class="game-name-input flex-item-grow" type="text" maxlength="60" placeholder="Game Platform"/>
        </div>
          {{#if data}}
          <button class="platform-menu-trigger dd-trigger icn-after" data-role="dd_trigger">Platform</button>
          <div class="platform-menu-container dd-menu flex icn-after hidden" data-role="dd_menu">
            <ul>
            {{#each data}}
              <li class="result-item icn-before" data-role="dd_item" data-platform-alias="{{this.alias}}">
                <div>{{this.name}}</div>
              </li>
            {{/each}}
            </ul>
          </div>
          {{/if}}
      </div>
      <button class="submit-button button flex flex-item-grow" type="submit" data-role="search_button"/>
        <span class="submit-text flex-item-grow" data-role="submit_text">Find That Game!</span>
        <div class='uil-rolling-css flex-item-grow hidden' data-role="loader">
          <div>
              <div></div>
              <div></div>
          </div>
        </div>
      </button>
    </form>
    <div class="learn-more flex">
      <h4 class="flex-item-base">New to PortcuPi?</h4>
      <a class="learn-more-link flex-item-base" href="">Learn More</a>
    </div>
  </div>
  <section class="mod-background"></section>
</section>
