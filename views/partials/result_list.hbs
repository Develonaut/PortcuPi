<section  class="mod {{#if mod_name}}{{mod_name}}{{/if}}" 
          data-role="mod"    
          {{#if data_conf}}data-conf="{{data_conf}}"{{/if}}>
  <div class="results-box">
    <div class="results-title">
      <h2><em>Here's</em> what we came up with.</h2>
      <h4>Don't like what you see? Wanna <a class="try-again-link link" href="/">try again?</a></h4>
    </div>
    <div class="results-wrapper" data-role="results">
      {{#if data.results}}
        <ul class="flex">
        {{#each data.results}}
          <li class="result-item flex flex-item-grow" data-game-id="{{this.id}}">
              <a class="flex flex-item-grow icn-before" href="/game/{{this.GameTitle}}?id={{this.id}}">
              <div>{{this.GameTitle}}</div>
              <div>{{this.Platform}}</div>
              </a>
          </li>
        {{/each}}
        </ul>
      {{else}}
        {{> no_results }}
      {{/if}}
    </div>
  </div>
  <section class="mod-background"></section>
</section>

